#!/usr/bin/env perl

use strict;
use warnings;
use Test::More;
use DDG::Test::Goodie;

zci answer_type => 'pi';
zci is_cached  => 1;

ddg_goodie_test(
    [qw( DDG::Goodie::Pi )],
    '5 digits of pi' => test_zci('3.1415'),
    '10 digits of pi' => test_zci('3.141592653'),
    'digits of pi' => test_zci('3....'),
    'abc digits of pi' => undef
);

done_testing;
