<div class='zci__conversions-controls'>
	<div class='zci__conversions_left'>
		<input name='zci__conversions-left-in' id='zci__conversions-left-in' type='number' value='{{value_in}}' />
		<input name='zci__conversions-left-unit' id='zci__conversions-left-unit' type='text' value= '{{unit_from}}' />
<!--
		<select name='zci__conversions-left-unit'>
			<option value='{{unit_from}}'>{{unit_from}}</option>
		</select>
-->
	</div>
	<div class='zci__conversions_equals'> = </div>
	<div class='zci__conversions_right'>
		<input name='zci__conversions-right-in' id='zci__conversions-right-in' type='number' value='{{value_out}}' readonly />
		<input name='zci__conversions-right-unit' id='zci__conversions-right-unit' type='text' value= '{{unit_to}}' />
<!--
		<select name='zci__conversions-right-unit'>
			<option value='{{unit_to}}'>{{unit_to}}</option>
		</select>
-->
	</div>

	<div class='zci__conversions_physical_quantity_wrapper'>
		<div>Physical Quantity</div>
		<select name='conversions-physical-quantity' id='zci__conversions-physical-quantity'>
			<option value='mass'>Mass</option>
			<option value='length'>Length</option>
			<option value='area'>Area</option>
			<option value='volume'>Volume</option>
			<option value='duration'>Duration</option>
			<option value='pressure'>Pressure</option>
			<option value='energy'>Energy</option>
			<option value='power'>Power</option>
			<option value='angle'>Angle</option>
			<option value='force'>Force</option>
			<option value='temperature'>Temperature</option>
			<option value='digital'>Digital</option>
		</select>
	</div>
</div>