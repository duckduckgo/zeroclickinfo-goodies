<!-- the 3 number inputs -->
<div class="gw">
  <div class="g loan_input--section third">
      <label id="j-amount-info--label">Amount</label>
      <input class="frm__input bg-clr--white" type="number" id="j-amount_input" min="0" step="1" value="5000">
  </div>

  <div class="g loan_input--section third">
      <label>Months</label>
      <input class="frm__input bg-clr--white" type="number" id="j-period_input" min="0" max="500" step="1" value="36">
  </div>

  <div class="g loan_input--section third">
      <label>Interest Rate (APR %)</label>
      <input class="frm__input bg-clr--white" type="number" id="j-interest_input" min="0" step="0.1" value="5.5">
  </div>
</div>

<!-- selection section -->
<div class="loan_selector">
  <form class="form">
      <input type="radio" name="loan_type" class="loan_selector--radio" id="loan_selector--radio-amount" checked>
      <label>Loan Amount</label>
      <input type="radio" name="loan_type" class="loan_selector--radio" id="loan_selector--radio-monthly">
      <label>Monthly Budget</label>
  </form>
</div>

<!-- loan information section -->
<div class="loan loan_bar">
    <div class="loan_bar--info-left">
        <div class="loan_bar--info forty" id="loan_bar--payments">
            <label id="j-loan_bar--info-label">Monthly Repayment</label>
            <p id="j-amount_output">-</p>
        </div>
    </div>
    
    <div class="loan_bar--info-aditional">
        <div class="loan_bar--info thirty">
            <div class="gw">
              <label class="g">Repayable</label>
            </div>
            <div class="gw">
              <p id="j-repayable_output" class="g">-</p>
            </div>
        </div>

        <div class="loan_bar--info thirty">
            <div class="gw">
              <label class="g">Total Cost</label>
            </div>
            <div class="gw">
              <p id="j-total_cost_output" class="g">-</p>
            </div>
        </div>
    </div>
</div>