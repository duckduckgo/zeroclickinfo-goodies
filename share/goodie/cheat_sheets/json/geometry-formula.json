                "key": "Square",
                "val": "side²"
            },
            {
                "key": "Rectangle",
                "val": "length × width"
            },
            {
                "key": "Triangle",
                "val": "(base × height) / 2"
            },
            {
                "key": "Circle",
                "val": "π × r²"
            },
            {
                "key": "Trapezoid",
                "val": "1/2 (base1 + base2) × height"
            }
        ],
        "Surface Area Formulas":[
            {
                "key": "Cube",
                "val": "6 × side²"
            },
            {
                "key": "Rectangular Prism",
                "val": "(2 × length × width) + (2 × length × height) + (2 × height × width)"
            },
            {
                "key": "Sphere",
                "val": "4 × π × radius²"
            },
            {
                "key": "Right Circular Cylinder",
                "val": "(2π × radius x height) + (2π × radius²)"
            },
            {
                "key": "Right Circular Cone",
                "val": "π × radius × ( radius + sqrt(height² + radius²) )"
            }
        ],
        "Volume Formulas": [
            {
                "key": "Cube",
                "val": "side³"
            },
            {
                "key": "Rectangular Prism",
                "val": "length × width × height"
            },
            {
                "key": "Sphere",
                "val": "(4/3) × π × radius³"
            },
            {
                "key": "Right Circular Cylinder",
                "val": "π × radius³ × height"
            },
            {
                "key": "Right Circular Cone",
                "val": "(1/3) × π × radius² × height"
            }

        ]
    }
