      }, {

         "key": "I Don't Know!",

         "trn": "Wǒ bù zhī dào!",

         "val": "我不知道！"

      }, {

         "key": "I Have No Idea.",

         "trn": "Wǒ yě bù zhī dào!",

         "val": "我也不知道！"

      }, {

         "key": "What's That Called In Chinese?",

         "trn": "Nà zài hàn yǔ lǐ jiào shén me?",

         "val": "那在汉语里叫什么？"

      }, {

         "key": "What Is This?",

         "trn": "Zhè shì shén me?",

         "val": "这是什么？"

      }, {

         "key": "My Chinese is bad.",

         "trn": "Wǒ hàn yǔ shuō de bù hǎo.",

         "val": "我汉语说的不好。"

      }, {

         "key": "I need to practice my Chinese",

         "trn": "Wǒ xū yào liàn xí hàn yǔ.",

         "val": "我需要练习汉语。"

      }, {

         "key": "Don't worry!",

         "trn": "Bié dān xīn!",

         "val": "别担心！"

      }],

