      "Greetings": [{

         "key": "Hi!",

         "trn": "Nǐ hǎo!",

         "val": "你好"

      }, {

         "key": "Good morning!",

         "trn": "Zǎo shàng hǎo/ zǎo",

         "val": "早上好/ 早"

      }, {

         "key": "Good evening!",

         "trn": "Wǎn shàng hǎo!",

         "val": "晚上好！"

      }, {

         "key": "Welcome! (to greet someone)",

         "trn": "Huān yíng!",

         "val": "欢迎！"

      }, {

         "key": "How are you?",

         "trn": "Nǐ hǎo",

         "val": "你好！"

      }, {

         "key": "I'm fine, thanks!",

         "trn": "Hěn hǎo! Xiè xiè",

         "val": "很好！谢谢！"

      }, {

         "key": "And you?",

         "trn": "Nǐ ne?",

