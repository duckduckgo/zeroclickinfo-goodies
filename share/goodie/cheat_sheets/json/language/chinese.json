         "key": "I work as a (translator/ businessman)",

         "trn": "Wǒ shì (fān yì/shāng rén).",

         "val": "我是（翻译/商人）。"

      }, {

         "key": "I like Chinese",

         "trn": "Wǒ xǐ huān hàn yǔ.",

         "val": "我喜欢汉语。"

      }, {

         "key": "I've been learning Chinese for 1 month",

         "trn": "Wǒ xué hàn yǔ yī gè yuè le.",

         "val": "我学汉语一个月了。"

      }, {

         "key": "Oh! That's good!",

         "trn": "Ò! Tài hǎo la!",

         "val": "噢！太好啦！"

      }, {

         "key": "How old are you?",

         "trn": "Nǐ jǐ suì le?",

         "val": "你几岁了？"

      }, {

         "key": "I'm (twenty, thirty...) years old.",

         "trn": "Wǒ (èr shí/ sān shí) suì le.",

         "val": "我（二十／三十）岁了。"

      }, {

         "key": "I have to go",

         "trn": "Wǒ gāi zǒu le.",

         "val": "我该走了。"

      }, {

         "key": "I will be right back!",

         "trn": "Wǒ guò yī huír jiù huí lái!",

         "val": "我过一会儿就回来！"

      }],

      "Wish Someone Something": [{

         "key": "Good luck!",

         "trn": "Zhù nǐ hǎo yùn!",

         "val": "祝你好运！"

      }, {

         "key": "Happy birthday!",

         "trn": "Zhù nǐ shēng rì kuài lè!",

         "val": "祝你生日快乐！"

      }, {

         "key": "Happy new year!",

         "trn": "Xīn nián kuài lè!",

         "val": "新年快乐！"

      }, {

         "key": "Merry Christmas!",

         "trn": "Shèng dàn kuài lè!",

         "val": "圣诞快乐！"

      }, {

         "key": "Congratulations!",

         "trn": "Zhù hè/Gōng xǐ!",

         "val": "祝贺／恭喜！"

      }, {

         "key": "Enjoy! (for meals...)",

         "trn": "Qǐng yòng cān!",

         "val": "请用餐！"

