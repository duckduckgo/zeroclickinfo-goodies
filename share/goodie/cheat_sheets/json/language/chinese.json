         "key": "I missed you so much!",

         "trn": "Wǒ hǎo xiǎng nǐ ya",

         "val": "我好想你呀！"

      }, {

         "key": "What's new?",

         "trn": "Yǒu shén me xī qí de?",

         "val": "有什么稀奇的？"

      }, {

         "key": "Nothing much",

         "trn": "Méi yǒu!",

         "val": "没有！"

      }, {

         "key": "Good night!",

         "trn": "Wǎn ān",

         "val": "晚安"

      }, {

         "key": "See you later!",

         "trn": "Dài huì ér jiàn",

         "val": "待会儿见"

      }, {

         "key": "Good bye!",

         "trn": "Zài jiàn",

         "val": "再见"

      }],

      "Asking for Help and Direction": [{

         "key": "I'm lost",

         "trn": "Wǒ mí lù le.",

         "val": "我迷路了。"

      }, {

         "key": "Can I help you?",

         "trn": "Yǒu shén me xū yào wǒ bāng nǐ de?",

         "val": "有什么需要我帮你的？"

      }, {

         "key": "Can you help me?",

         "trn": "Nǐ kěn bāng zhù wǒ ma?",

         "val": "你肯帮助我吗？"

      }, {

         "key": "Where is the (bathroom/ pharmacy)?",

         "trn": "(Xǐ shǒu jiān/yào fáng) zài nǎ lǐ",

         "val": "（洗手间／药房）在哪里？"

      }, {

         "key": "Go straight! then turn left/ right!",

         "trn": "Zhí wǎng qián zǒu! Zuǒ/yòu guǎi wān dào!",

         "val": "直往前走！左／右拐弯到！"

      }, {

         "key": "I'm looking for john.",

         "trn": "Wǒ zài zhǎo yuē hàn.",

         "val": "我在找约翰。"

      }, {

         "key": "One moment please!",

         "trn": "Qǐng děng yī xià!",

         "val": "请等一下！"

      }, {

         "key": "Hold on please! (phone)",

         "trn": "Qǐng shāo hòu!",

         "val": "请稍候！"

      }, {

         "key": "How much is this?",

         "trn": "Zhè duō shǎo qián?",

         "val": "这多少钱？"

      }, {

         "key": "Excuse me ...! (to ask for something)",

         "trn": "Qǐng wèn!",

         "val": "请问！"

      }, {

         "key": "Excuse me! ( to pass by)",

         "trn": "Bào qiàn!",

         "val": "抱歉！"

      }, {

         "key": "Come with me!",

         "trn": "Gēn wǒ lái!",

         "val": "跟我来！"

      }],

      "Introduction": [{

         "key": "Do you speak (English/ Chinese)?",

         "trn": "Nǐ huì shuō (yīng yǔ/ hàn yǔ) ma?",

         "val": "你会说 (英语／汉语) 吗。"

