  "sections": {
    "Etiquette": [
      {
        "key": "I'm sorry",
        "val": "நான் வருந்துகிறேன்",
        "trn": "Nan varunthukiren"
      },
      {
        "key": "Thank you",
        "val": "நன்றி",
        "trn": "Nanri"
      },
      {
        "key": "Please",
        "val": "தயவு செய்து",
        "trn": "Tayavu seidhu"
      },
      {
        "key": "Thank you very much!",
        "val": "மிக்க நன்றி!",
        "trn": "Mikka nanri!"
      },
      {
        "key": "You're welcome",
        "val": "வரவேற்கிறேன்",
        "trn": "Varaverkiren"
      }
    ],
    "Getting Help": [
      {
        "key": "Call the police!",
        "val": "காவல்துறையினரை அழையுங்கள் !",
        "trn": "Kavalthuraiyinarai azhaiyungal!"
      },
      {
        "key": "Can you speak more slowly please?",
        "val": "நீங்கள் மிகவும் மெதுவாக தயவு செய்து பேச முடியுமா?",
        "trn": "Neengal migavum medhuvaga thaiyavu seidhu pesa mudiyuma?"
      },
      {
        "key": "Can you repeat please?",
        "val": "தயவு செய்து மீண்டும் கூற முடியுமா?",
        "trn": "Tayavu seidhu meendum kura mudiyuma?"
      },
      {
        "key": "How do you say something in Tamil?",
        "val": "நீங்கள் எப்படி தமிழ் ஏதாவது சொல்ல?",
        "trn": "Neengal tamizhil epadi edavadu solla?"
      },
      {
        "key": "Stop!",
        "val": "நிறுத்து!",
        "trn": "Niruthu!"
      },
      {
        "key": "Do you speak English?",
        "val": "நீங்கள் ஆங்கிலம் பேசுவீர்களா?",
        "trn": "Neengal aangilam pesuveergala?"
      },
      {
        "key": "Excuse me!",
        "val": "என்னை மன்னியுங்கள்!",
        "trn": "Ennai maniyungal!"
      },
      {
        "key": "I need a doctor!",
        "val": "எனக்கு வைத்தியர் உதவி தேவை!",
        "trn": "Ennaku doctor udhavi thevai!"
      },
      {
        "key": "Call an ambulance!",
        "val": "ஒரு ஆம்புலன்ஸ் அழைக்க!",
        "trn": "Oru ambulance azhainga!"
      },
      {
        "key": "I am in danger!",
        "val": "நான் ஆபத்தில் இருக்கிறேன் !",
        "trn": "Naan aabathil irukinren!"
      },
      {
        "key": "Can you help me?",
        "val": "நீங்கள் எனக்கு உதவ முடியுமா ?",
        "trn": "Neengal enaku udhava mudiyuma?"
      },
      {
        "key": "Fire!",
        "val": "தீ !",
        "trn": "Thee!"
      }
    ],
    "Basics": [
      {
        "key": "My name is...",
        "val": "என் பெயர்...",
        "trn": "En peyar..."
      },
      {
        "key": "I'm fine, thanks!",
        "val": "நான் நலம். நன்றி!",
        "trn": "Naan nalam, nanri!"
      },
      {
        "key": "How are you?",
        "val": "எப்படி இருக்கிறீர்கள்?",
        "trn": "Epadi irukeeringal?"
      },
      {
        "key": "Welcome",
        "val": "வரவேற்கிறோம்",
        "trn": "Varaverkirom"
      },
      {
        "key": "What's your name?",
        "val": "உங்கள் பெயர் என்ன ?",
        "trn": "Ungal peyar enna?"
      }
    ],
    "Travelling": [
      {
        "key": "Turn left",
        "val": "இடப்பக்கம் திரும்பு ",
        "trn": "Idappakkam thirumbu"
      },
      {
        "key": "Where is the exit?",
        "val": "எங்கே வெளியேறும் உள்ளது ?",
        "trn": "Engae exit ulladhu?"
      },
      {
        "key": "Where?",
        "val": "எங்கே?",
        "trn": "Engae?"
      },
      {
        "key": "Is it far?",
        "val": "அது தூரத்தில் இருக்கிறது ?",
        "trn": "Athu dhoorathil irukiradha?"
      },
      {
        "key": "Please stop here",
        "val": "இங்கே நிறுத்துங்கள் ",
        "trn": "Inge niruthungal"
      },
      {
        "key": "Turn right",
        "val": "வலதுபுறம் திரும்ப ",
        "trn": "Valathupuram thirumba"
      },
      {
        "key": "Where can I find the taxis?",
        "val": "நான் எங்கே டாக்சிகள் காணலாம்?",
        "trn": "Naan enge taxi gal kanalam?"
      },
      {
        "key": "How can I get a taxi?",
        "val": "நான் ஒரு டாக்ஸி பெற முடியும்?",
        "trn": "Naan oru taxi pera mudiyuma?"
      }
    ],
    "Going out for dinner": [
      {
        "key": "A cup of coffee please",
        "val": "ஒரு கப் காபி தயவு செய்து கொடுக்க",
        "trn": "Oru cup coffee thaiyavu seidhu kudunga"
      },
      {
        "key": "Where is a good restaurant?",
        "val": "எங்கே ஒரு நல்ல உணவகம் உள்ளது?",
        "trn": "Enge oru nalla unavagam ulladhu?"
      },
      {
        "key": "A glass of water please",
        "val": "ஒரு கிளாஸ் தண்ணீர் தயவு செய்து கொடுக்க ",
        "trn": "Oru glass thanni thaiyavu seidhu kudunga"
      },
      {
        "key": "Can I get a menu, please?",
        "val": "நான்  ஒரு மெனு தயவு செய்து பெற முடியும் ?",
        "trn": "Naan oru menu thaiyavu seidhu pera mudiyuma?"
      }
    ]
  }
}
