            {
                "val": "Open Paste Special dialog box",
                "key": "[Ctrl] [Alt] [V]"
            }
        ],
        "Movement": [
            {
                "val": "Move one character to the left",
                "key": "←"
            },
            {
                "val": "Move one character to the right",
                "key": "→"
            },
            {
                "val": "Move one line up",
                "key": "↑"
            },
            {
                "val": "Move one line down",
                "key": "↓"
