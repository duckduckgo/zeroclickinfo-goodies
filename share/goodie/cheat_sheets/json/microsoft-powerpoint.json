        "Selection": [
            {
                "val": "Select one character to the right",
                "key": "[Shift] [→]"
            },
            {
                "val": "Select one character to the left",
                "key": "[Shift] [←]"
            },
            {
                "val": "Select to the end of a word",
                "key": "[Ctrl] [Shift] [→]"
            },
            {
                "val": "Select to the beginning of a word",
                "key": "[Ctrl] [Shift] [←]"
            },
            {
                "val": "Select one line up",
                "key": "[Ctrl] [↑]"
            },
            {
                "val": "Select one line down",
                "key": "[Ctrl] [↓]"
            },
            {
                "val": "Select an object when the text inside the object is selected",
                "key": "Esc"
            },
            {
                "val": "Select text within an object with an object selected",
                "key": "Enter"
            },
            {
                "val": "Select all",
                "key": "[Ctrl] [A]"
            }
        ],
        "Deletion": [
            {
                "val": "Delete one character to the left",
                "key": "Backspace"
            },
            {
                "val": "Delete one word to the left",
                "key": "[Ctrl] [Backspace]"
            },
            {
                "val": "Delete one character to the right",
                "key": "Delete"
            },
            {
                "val": "Delete one word to the right",
                "key": "[Ctrl] [Delete]"
