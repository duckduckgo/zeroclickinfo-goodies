            {
                "val": "Bold",
                "key": "[Ctrl] [B]"
            },
            {
                "val": "Italic",
                "key": "[Ctrl] [I]"
            },
            {
                "val": "Underline",
                "key": "[Ctrl] [U]"
            },
            {
