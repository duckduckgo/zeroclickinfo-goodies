        "Conditionals",
        "Loops",
        "Comments",
        "Other"
    ],
    "sections": {
        "Variables": [
            {
                "key": "$hello = \"Hello World\"",
                "val": "Initialize a variable"
            },
            {
                "key": "$hello = \"1 2 3 4 5\"",
                "val": "Initialize a list"
            }
        ],
        "Built-in Variables": [
            {
                "key": "$0",
                "val": "Name of the shell script this variable is used in."
            },
            {
                "key": "$1",
                "val": "First command line parameter (Continue with $2, $3 etc.)"
            },
            {
                "key": "$#",
                "val": "The number of command line parameters."
            },
            {
                "key": "$*",
                "val": "All command line parameters."
            },
            {
                "key": "$-",
                "val": "Options given to the shell."
            },
            {
                "key": "$?",
                "val": "The exit status of the last command."
            },
            {
                "key": "$$",
                "val": "Process ID of the script (ID of the shell running the script)."
            }
        ],
        "Operators": [
            {
                "key": "==",
                "val": "Equal"
            },
            {
                "key": "~=",
                "val": "Not equal"
            },
            {
                "key": "&&",
                "val": "And"
            },
            {
                "key": "||",
                "val": "Or"
            }
        ],
        "Conditionals": [
            {
                "key": "if \\[$hello == \"world\"\\] ; then",
                "val": "If statement"
            },
            {
                "key": "elif \\[$hello == \"world\"\\] ; then",
                "val": "Else if statement"
            },
            {
                "key": "else",
                "val": "Else statement"
            },
            {
                "key": "fi",
                "val": "End if statement"
            },
            {
                "key": "case \"$hello\" in",
                "val": "Case statement"
            },
            {
                "key": "a) echo world ;;",
                "val": "Case entry \"a\"."
            },
            {
                "key": "esac",
                "val": "End case statement"
            }
        ],
        "Loops": [
            {
                "key": "for ((i = 1; i <= 10; i++)) ; do",
                "val": "For loop running 10 times."
            },
            {
                "key": "for i in $list ; do",
                "val": "For loop being executed for every item in $list."
            },
            {
                "key": "while (i <= 10) ; do",
                "val": "While loop"
            },
            {
                "key": "done",
                "val": "End loop"
            }
        ],
        "Comments": [
            {
                "key": "# Hello world",
                "val": "Single-line comment"
            }
        ],
        "Other": [
            {
                "key": "cmd1 && cmd2",
                "val": "Run cmd1 and cmd2 if cmd1 ran successfully."
            },
            {
                "key": "cmd1 || cmd2",
                "val": "Run cmd1 or cmd2 if cmd2 did not run successfully."
            },
            {
                "key": "cmd1 & cmd2",
                "val": "Run cmd1 and run cmd2 while cmd1 is still running."
            }
        ]
    }
}