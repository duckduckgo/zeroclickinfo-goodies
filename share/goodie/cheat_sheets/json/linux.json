        "Shortcuts":[
            {
                "val":"backgrounds current command",
                "key":"[ctrl] [z]"
            },
            {
                "val":"stops current command",
                "key":"[ctrl] [c]"
            },
            {
                "val":"log out of current session",
                "key":"[ctrl] [d]"
            },
            {
                "val":"erases one word in current line",
                "key":"[ctrl] [w]"
            },
            {
                "val":"erases whole line",
                "key":"[ctrl] [u]"
            },
            {
                "val":"reverse lookup of previous commands",
                "key":"[Ctrl] [r]"
            },
            {
                "val":"repeat last command",
                "key":"!!"
            },
            {
                "val":"log out of current session",
                "key":"exit"
            }
        ]
