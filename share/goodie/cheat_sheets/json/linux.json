{
    "id":"linux_cheat_sheet",
    "name":"Linux",
    "description": "GNU/Linux is an open source Unix-like operating system assembled under the model of free and open source software development and distribution",
    "metadata":{
        "sourceName":"Cheatography",
        "sourceUrl":"http://www.cheatography.com/davechild/cheat-sheets/linux-command-line/"
    },
    "aliases" :[
	"gnu linux",
	"gnu/linux",
	"unix"
    ],
    "template_type": "terminal",
    "section_order": [
        "Navigation",
        "File Commands",
        "SSH",
        "Installation",
        "Network",
        "System Info",
        "Searching and Sorting",
        "Process Management",
        "File Permissions",
        "Compression"
    ],
    "sections": {
        "Navigation": [
            {
                "val": "List directory contents",
                "key": "ls"
            },
            {
                "val": "Formatted long listing with hidden files",
                "key": "ls -alh"
            },
            {
                "val": "Change the current directory to the DIR directory",
                "key": "cd DIR"
            },
            {
                "val": "Change current directory to $HOME",
                "key": "cd ~"
            },
            {
                "val": "Change the current directory to the root directory",
                "key": "cd /"
            },
            {
                "val": "Change to the parent of the current directory",
                "key": "cd .."
            },
            {
                "val": "Show name of current working directory",
                "key": "pwd"
            }  
        ],
        "File Commands": [
            {
                "val": "Create directory DIR",
                "key": "mkdir -p DIR"
            },
            {
                "val": "Remove FILE",
                "key": "rm FILE"
            },
            {
                "val": "Remove DIR and its contents recursively",
                "key": "rm -r DIR"
            },
            {
                "val": "Force remove FILE",
                "key": "rm -f FILE"
            },
            {
                "val": "Recursively and forcefully remove a directory's contents",
                "key": "rm -rf DIR"
            },
            {
                "val": "Copy the contents of FILE1 to FILE2",
                "key": "cp FILE1 FILE2"
            },
            {
                "val": "Rename or move FILE1 to FILE2",
                "key": "mv FILE1 FILE2"
            },
            {
                "val": "Create symbolic link 'link' to FILE",
                "key": "ln -s FILE link"
            },
            {
                "val": "Create FILE or change FILE timestamps",
                "key": "touch FILE"
            },
            {
                "val": "Standard output (stdout) of cmd to file",
                "key": "cmd > FILE"
            },
	    {
		"val": "Append stdout to file",
		"key": "cmd >> file"
	    },
            {
                "val": "Concatenate FILE1 and FILE2 and print to stdout",
                "key": "cat FILE1 FILE2"
            },
            {
                "val": "Output the contents of the FILE. You can scroll up and down",
                "key": "less FILE"
            },
            {
                "val": "View contents of FILE one page at a time",
                "key": "more FILE"
            },
            {
                "val": "output first 10 lines of FILE",
                "key": "head FILE"
            },
            {
                "val": "Output last 10 lines of FILE",
                "key": "tail FILE"
            },
            {
                "val": "Output contents of FILE as it grows",
                "key": "tail -f FILE"
            },
            {
                "val": "Replace instances of foo with bar",
                "key": "sed -i 's,foo,bar,g' file.txt"
            }
        ],
        "SSH": [
            {
                "val": "Connect to host as user",
                "key": "ssh user@host"
            },
            {
                "val": "Connect using port p",
                "key": "ssh -p port user@host"
            },
            {
                "val": "Connect and use bind port",
                "key": "ssh -D port user@host"
            }
        ],
        "Installation": [
            {
                "val": "Configure the source file",
                "key": "./configure"
            },
            {
                "val": "Compile the source code",
                "key": "make"
            },
            {
                "val": "Install the compiled source code",
                "key": "make install"
            }
        ],
        "Network": [
            {
                "val": "Ping host 'host'",
                "key": "ping host"
            },
            {
                "val": "Get whois for domain",
                "key": "whois domain"
            },
            {
                "val": "Get DNS for domain",
                "key": "dig domain"
            },
            {
                "val": "Reverse lookup host",
                "key": "dig -x host"
            },
            {
                "val": "Download file",
                "key": "wget file"
            },
            {
                "val": "Continue stopped download",
                "key": "wget -c file"
            },
            {
                "val": "Recursively download files from url",
                "key": "wget -r url"
            }
        ],
        "System Info": [
            {
                "val": "Print or set the system date and time",
                "key": "date"
            },
            {
                "val": "Displays a calendar",
                "key": "cal"
            },
            {
                "val": "Tell how long the system has been running",
                "key": "uptime"
            },
            {
                "val": "Show who is logged on and what they are doing",
                "key": "w"
            },
            {
                "val": "Print effective userid",
                "key": "whoami"
            },
	    {
		"val": "Show host name",
		"key": "hostname"
	    },
            {
                "val": "Print system information",
                "key": "uname -a"
            },
            {
                "val": "Print the cpu info",
                "key": "cat /proc/cpuinfo"
            },
            {
                "val": "Print the memory information",
                "key": "cat /proc/meminfo"
            }
        ],
        "Process Management":[
            {
                "val": "Show real time processes",
                "key": "top"
            },
            {
                "val": "Report a snapshot of the current processes",
                "key": "ps"
            },
            {
                "val": "Show processes for all users",
                "key": "ps aux"
            },
            {
                "val": "Terminate a process",
                "key": "kill \\[pid\\]"
            },
            {
                "val": "Run jobs in the background",
                "key": "bg"
            },
            {
 		"val": "Run jobs in the foreground",
                "key": "fg"
            },
            {
                "val": "Bring job n to the foreground",
                "key": "fg n"
            },
            {
                "val": "Estimate file space usage",
                "key": "du"
            },
            {
                "val": "Summarize file space usage and print sizes in human readable format",
                "key": "du -sh"
            },
            {
                "val": "Display amount of free and used memory in the system",
                "key": "free -h"
            },
            {
                "val": "Locate the binary, source, and manual page files for a command",
                "key": "whereis"
            },
            {
                "val": "Locate a command",
                "key": "which"
            }
        ],
        "Searching and Sorting": [
            {
                "val": "Search for pattern in FILE",
                "key": "grep pattern FILE"
            },
            {
                "val": "Search recursively for pattern in DIR",
                "key": "grep -r pattern DIR"
            },
            {
                "val": "Search for the pattern in in the output of command",
                "key": "command | grep pattern"
            },
	        {
		        "val": "Find files starting with name in dir",
		        "key": "find /dir/ -name name*"
	        },
	        {
		        "val": "Find files owned by name in dir",
		        "key": "find /dir/ -user name"
        	},
            {
                "val": "Find all instances of FILE",
                "key": "locate FILE"
            },
            {
                "val": "Sort the content of FILE alphabetically",
                "key": "sort FILE"
            },
            {
                "val": "Sort in reverse",
                "key": "sort -r FILE"
            },
            {
                "val": "Sort randomly",
                "key": "sort -R FILE"
            }            
        ],
        "File Permissions": [
            {
                "val": "Change permission of FILE",
                "key": "chmod octal FILE"
            },
            {
                "val": "read (r)",
                "key": "4"
            },
            {
                "val": "write (w)",
                "key": "2"
            },
            {
                "val": "execute (x)",
                "key": "1"
            }
        ],
        "Compression": [
            {
                "val": "Tar files into FILE.tar",
                "key": "tar cf FILE.tar files"
            },
            {
                "val": "Untar into current directory",
                "key": "tar xf FILE.tar"
            },
            {
                "val": "List the contents of an archive",
                "key": "tar tf FILE.tar"
            },
            {
                "val": "Compress FILE and rename to FILE.gz",
                "key": "gzip FILE"
            },
            {
                "val": "Decompress FILE.gz",
                "key": "gzip -d FILE.gz"
            }
        ]
    }
}
