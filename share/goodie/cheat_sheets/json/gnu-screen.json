{
    "id": "gnu_screen_cheat_sheet",
    "name": "gnu screen",
    "description": "Terminal multiplexer",
    "metadata": {
        "sourceName": "GNU Screen Manual",
        "sourceUrl": "https://www.gnu.org/software/screen/manual/screen.html"
    },
    "template_type": "terminal",
    "section_order": ["Terminal Commands", "Main Commands", "Copying and Scrolling", "Window Commands"],
    "sections": {
        "Terminal Commands": [
        {
            "key": "screen",
            "val": "Start a new session"
        },
        {
            "key": "screen -S <name>",
            "val": "Start a new named session"
        },
        {
            "key": "screen -ls",
            "val": "List sessions"
        },
        {
            "key": "screen -r <name>",
            "val": "Re-attach session"
        }
        ],
        "Copying and Scrolling": [
        {
            "key": "[Ctrl-a] [\\[]",
            "val": "Copy mode"
        },
        {
            "key": "[Ctrl-a] [space]",
            "val": "Start copy"
        },
        {
            "key": "[Ctrl-a] [space]",
            "val": "End copy"
        },
        {
            "key": "[Ctrl-a] [\\]]",
            "val": "Paste"
        },
        {
            "key": "[Ctrl-a] [u]",
            "val": "Scroll up"
        },
        {
            "key": "[Ctrl-a] [d]",
            "val": "Scroll down"
        },
        {
            "key": "[Ctrl-a] [escape]",
            "val": "End copy mode"
        }
        ],
        "Main Commands": [
        {
            "key": "[Ctrl-a] [?]",
            "val": "Shortcuts menu"
        },
        {
            "key": "[Ctrl-a] [:]",
            "val": "Enter command mode"
        },
        {
            "key": "[Ctrl-a] [d]",
            "val": "Detach session"
        },
        {
            "key": "[Ctrl-a] [\\]",
            "val": "Kill session"
        }
        ],
        "Window Commands": [
        {
            "key": "[Ctrl-a] [c]",
            "val": "Create a new window"
        },
        {
            "key": "[Ctrl-a] [k]",
            "val": "Kill current window"
        },
        {
            "key": "[Ctrl-a] [n]",
            "val": "Next window"
        },
        {
            "key": "[Ctrl-a] [p]",
            "val": "Previous window"
        },
        {
            "key": "[Ctrl-a] [0-9]",
            "val": "Jump to window #"
        },
        {
            "key": "[Ctrl-a] [Ctrl-a]",
            "val": "Jump to last-visited window"
        },
        {
            "key": "[Ctrl-a] [\"]",
            "val": "List windows"
        },
        {
            "key": "[Ctrl-a] [|]",
            "val": "Split vertical"
        },
        {
            "key": "[Ctrl-a] [S]",
            "val": "Split horizontal"
        },
        {
            "key": "[Ctrl-a] [tab]",
            "val": "Focus next region"
        },
        {
            "key": "[Ctrl-a] [Q]",
            "val": "Quit split screen mode"
        }
        ]
    }
}
