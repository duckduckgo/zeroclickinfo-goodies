<h3 class="c-base__title">{{name}}</h3>
<h4 class="c-base__sub">{{description}}</h4>

<div class="cheatsheet__container compressed" >
    {{#cheatsheets_ordered sections section_order}}
    <div class="cheatsheet__section {{#if showhide}} showhide is-hidden {{/if}}">
        <span>
            <h6 class="cheatsheet__title">{{name}}</h6>
        </span>
        <table>
            <tbody>
                {{#each items}}
                <tr>
                    <td class="cheatsheet__key">
                        {{cheatsheets_codeblock key}}
                    </td>
                    <td class="cheatsheet__value">
                        {{val}}
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    {{/cheatsheets_ordered}}
</div>

<div class="cheatsheet__footer c-list__links">
    <a class="c-list__link  chomp--link  sep--after can-expand">
        <i class="chomp--link__icn"></i>
        <span class="chomp--link__mr">Show More</span>
        <span class="chomp--link__ls">Show Less</span>
    </a>
    <span>{{{moreAt metadata 'none' className="c-list__link"}}}</span>
</div>
