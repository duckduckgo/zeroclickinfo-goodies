<div id="text_to_audio__container">
    <textarea id="text_to_audio__audio_text">{{say}}</textarea>
    <span>
        <label>volume</label>
        <input id="text_to_audio__volume_slider" type="range"  min="0" max="1" step="0.05" value="1"/>
    </span>
    <span>
        <label>rate</label>
        <input id="text_to_audio__rate_slider" type="range"  min="0.1" max="10" step="0.1" value="1"/>
    </span>
    <span>
        <label>pitch</label>
        <input id="text_to_audio__pitch_slider" type="range"  min="0" max="2" step="0.1" value="1"/>
    </span>
    <span class="float_right">
        <button id="text_to_audio__play_audio">Play</button>
        <select id="text_to_audio__voice_selection"></select>
    </span>
</div>
